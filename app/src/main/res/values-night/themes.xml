<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Change colors with specific for theme -->
    <style name="Theme.TestDemoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorAccent">@color/orange</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/dark_orange</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background">@color/background_medium</item>
        <item name="errorTextColor">@color/red</item>

        <item name="colorOnSurface">@android:color/white</item>
    </style>

    <style name="Theme.TestDemoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestDemoApp.AppBarOverlay" parent="Theme.TestDemoApp" />

</resources>