<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="itemViewModel"
            type="com.android_test_maverick.UserModel" />

        <variable
            name="productItemClick"
            type="com.android_test_maverick.view.ListAdapter.ListAdapterListener"/>
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:onLongClick="@{() -> productItemClick.onUserDelete(itemViewModel)}">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="200dp"
        tools:background="@tools:sample/backgrounds/scenic"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@tools:sample/full_names"
        android:background="#E1303F9F"
        android:paddingStart="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="@{itemViewModel.name}"/>

</androidx.cardview.widget.CardView>
</layout>