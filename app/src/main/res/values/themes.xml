<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/details_transition</item>
        <item name="android:windowExitTransition">@transition/details_transition</item>
        <item name="android:windowSharedElementEnterTransition">@transition/details_transition
        </item>
        <item name="android:windowSharedElementExitTransition">@transition/details_transition</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>
</resources>